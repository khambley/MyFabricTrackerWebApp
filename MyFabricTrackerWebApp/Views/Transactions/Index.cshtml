@model IEnumerable<MyFabricTrackerWebApp.Models.Transaction>

@{
    ViewData["Title"] = "Adjustments";
}

<h3>Inventory Adjustments</h3>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Item #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InchesQty)
            </th>
            <th>
                Total Inches
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FatQtrQty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reason)
            </th>
            <th>
               Date
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDeleted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fabric.FabricItemCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InchesQty)
            </td>
            <td>
                @item.Fabric.TotalInches
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FatQtrQty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reason)
            </td>
            <td>
                @item.TransactionDate.ToShortDateString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDeleted)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TransactionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TransactionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TransactionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
