@model MyFabricTrackerWebApp.Models.Transaction

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Transaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TransactionId" />
            <div class="form-group">
                <label asp-for="FabricId" class="control-label"></label>
                <select asp-for="FabricId" class="form-control" asp-items="ViewBag.FabricId"></select>
                <span asp-validation-for="FabricId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InchesQty" class="control-label"></label>
                <input asp-for="InchesQty" class="form-control" />
                <span asp-validation-for="InchesQty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FatQtrQty" class="control-label"></label>
                <input asp-for="FatQtrQty" class="form-control" />
                <span asp-validation-for="FatQtrQty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reason" class="control-label"></label>
                <input asp-for="Reason" class="form-control" />
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransactionDate" class="control-label"></label>
                <input asp-for="TransactionDate" class="form-control" />
                <span asp-validation-for="TransactionDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

